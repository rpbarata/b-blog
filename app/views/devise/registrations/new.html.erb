<main class="text-center form-auth">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false }}) do |f| %>
    <h1 class="h3 mb-3 fw-normal"><%= t '.sign_up' %></h1>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-floating mb-2">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", id: "floatingFirstNameInput", placeholder: "First Name"%>
      <%= f.label :first_name, for: "floatingFirstNameInput" %>
    </div>


    <div class="form-floating mb-2">
      <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control", id: "floatingLastNameInput", placeholder: "Last Name"%>
      <%= f.label :last_name, for: "floatingLastNameInput" %>
    </div>

    <div class="form-floating mb-2">
      <%= f.text_field :username, autocomplete: "username", class: "form-control", id: "floatingUsernameInput", placeholder: "Username"%>
      <%= f.label :username, for: "floatingUsernameInput" %>
    </div>

    <div class="form-floating mb-2">
      <%= f.email_field :email, autocomplete: "email", class: "form-control", id: "floatingEmailInput", placeholder: "Email"%>
      <%= f.label :email, for: "floatingEmailInput" %>
    </div>

    <div class="form-floating mb-2">
      <%= f.password_field :password, class: "form-control", id: "floatingPasswordInput", placeholder: "Password" %>
      <%= f.label :password, for: "floatingPasswordInput" %>
    </div>

    <div class="form-floating mb-2">
      <%= f.password_field :password_confirmation, class: "form-control", id: "floatingPasswordConfirmationInput", placeholder: "Password Confirmation" %>
      <%= f.label :password_confirmation, for: "floatingPasswordConfirmationInput" %>
    </div>

    <%= f.submit t('.sign_up'), class: "w-100 btn btn-lg btn-primary" %>

  <% end %>

  <%= render "devise/shared/links" %>
</main>