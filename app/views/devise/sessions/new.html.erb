<main class="text-center form-auth">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false }}) do |f| %>
    <h1 class="h3 mb-3 fw-normal"><%= t('.log_in') %></h1>

    <div class="form-floating mb-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "floatingEmailInput", placeholder: "Email"%>
      <%= f.label :email, for: "floatingEmailInput" %>
    </div>

    <div class="form-floating mb-2">
      <%= f.password_field :password, class: "form-control", id: "floatingPasswordInput", placeholder: "Password" %>
      <%= f.label :password, for: "floatingPasswordInput" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3 mb-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <%= f.submit t('.log_in'), class: "w-100 btn btn-lg btn-primary" %>
  <% end %>
  <%= render "devise/shared/links" %>
</main>


